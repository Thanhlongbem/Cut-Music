<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="30">


        <ImageView
            android:id="@+id/iconType"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2.9"
            />

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:weightSum="11"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_margin="2dp"
                    android:textColor="#00b2ff"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/author"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:maxLength="20"
                    android:text="fsdfsdfdshf  jdsfsdfsdffsfdfdsfj"
                    android:background="@null"/>

                <TextView
                    android:layout_margin="2dp"
                    android:textColor="#ff11"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/resource"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="fsdfsdfdshfjdsfsdfdsfdsdsfj"
                    android:maxLength="20"
                    android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                >
                <TextView
                    android:layout_margin="2dp"
                    android:id="@+id/nameOfSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLength="36"
                    android:text="fdskdlsfklsdjfkdsfsdfsdfdsfdsjhfdjsfhldsfhlf"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>


            <ImageView
                android:id="@+id/iconMenu"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2.9" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

</LinearLayout>